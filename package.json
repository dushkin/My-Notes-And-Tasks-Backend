  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --ignore 'logs/*' server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --testTimeout=10000 --runInBand",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --watch --testTimeout=10000 --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --coverage --testTimeout=10000 --runInBand",
    "test:unit": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --testPathPattern=unit --testTimeout=10000 --runInBand",
    "test:integration": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --testPathPattern=integration --testTimeout=10000 --runInBand",
    "test:api": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --testPathPattern=api --testTimeout=10000 --runInBand",
    "test:debug": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test node --inspect-brk node_modules/.bin/jest --runInBand --testTimeout=0",
    "beta:check": "node -e \"const User = require('./models/User'); const mongoose = require('mongoose'); mongoose.connect(process.env.MONGODB_URI).then(async () => { const count = await User.countDocuments(); console.log('Current users:', count); process.exit(0); });\"",
    "beta:reset": "node -e \"const User = require('./models/User'); const mongoose = require('mongoose'); mongoose.connect(process.env.MONGODB_URI).then(async () => { const result = await User.deleteMany({}); console.log('Deleted users:', result.deletedCount); process.exit(0); });\"",
    "beta:status": "curl http://localhost:5001/api/auth/beta-status"
  },
